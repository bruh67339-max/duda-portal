# Portal Content API Configuration
# Copy this file to .env and fill in your values

# The URL of your portal API
# Development: http://localhost:3000
# Production: https://your-portal.vercel.app
VITE_PORTAL_API_URL=http://localhost:3000

# Your site's slug (from the portal admin)
VITE_SITE_SLUG=joes-pizza

# Your site's API key (from the portal admin)
# Keep this secret! Don't commit the actual key to git
VITE_PORTAL_API_KEY=your-api-key-here

# Server-side environment variables (for SSR/API routes)
# These are NOT prefixed with VITE_ so they stay server-side only
PORTAL_API_URL=http://localhost:3000
SITE_SLUG=joes-pizza
PORTAL_API_KEY=your-api-key-here
